# -----------------------------------------------
# Component setup
# -----------------------------------------------
COMPONENT_ROOT := ../..

include $(COMPONENT_ROOT)/config.mk

# -----------------------------------------------
# Regmap YAML sources
#   List regio yaml block and decoder specification sources.
#   RTL is autogenerated for all yaml files listed.
# -----------------------------------------------
REG_BLOCK_YAML = \
    syscfg.yaml \
    cmac_adapter.yaml \
    qdma_function.yaml

REG_DECODER_YAML = \
    cmac_decoder.yaml \
    qdma_decoder.yaml \
    xilinx_alveo_decoder.yaml \
    bar2_decoder.yaml

# ----------------------------------------------------
# Options
# ----------------------------------------------------
REGIO_ELABORATE_OPTS :=
REGIO_GENERATE_OPTS :=

# ----------------------------------------------------
# Targets
# ----------------------------------------------------
all: reg compile synth

reg:     _reg app_decoder-ir.yaml
	@$(REGIO_ELABORATE_CMD) -f top -o $(REGIO_IR_OUTPUT_DIR)/esnet-smartnic-top-ir.yaml esnet-smartnic-top.yaml

compile: _reg_compile
synth:   _reg_synth
info:    _reg_info
clean:   _reg_clean

.PHONY: all reg compile synth info clean

app_decoder-ir.yaml:
	@$(MAKE) -s -C $(SRC_ROOT) reg COMPONENT=smartnic.regio
	@cp $(OUTPUT_ROOT)/smartnic/regio/ir/smartnic_decoder-ir.yaml app_decoder-ir.yaml

# -----------------------------------------------
# Include regio targets
# -----------------------------------------------
include $(SCRIPTS_ROOT)/Makefiles/regio.mk
